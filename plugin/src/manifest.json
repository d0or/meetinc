{
  "name": "Decentralize Events",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "detectSchemaorgEvents.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ticket_grey16.png",
      "32": "ticket_grey32.png",
      "48": "ticket_grey48.png",
      "128": "ticket_grey128.png"
    }
  },
  "icons": {
    "16": "ticket16.png",
    "32": "ticket32.png",
    "48": "ticket48.png",
    "128": "ticket128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "https://metamask.io/*"
    ],
    "ids": [
      "*"
    ]
  }
}